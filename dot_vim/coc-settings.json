{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "rust-analyzer": {
      "filetypes": ["rs"]
    }
  },
  "suggest.selection": "recentlyUsed",
  "yaml.enable": true,
  "yaml.validate": true,
  "yaml.format.enable": true
}
